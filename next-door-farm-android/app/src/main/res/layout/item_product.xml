<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        android:id="@+id/appointmentItemLayout"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:background="@drawable/rounded_goal_item_background"
        android:elevation="5dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
            android:id="@+id/productItemTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:text=""/>

    <TextView
            android:id="@+id/productItemDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/productItemTitle"
            android:textColor="@color/gray"
            android:textSize="16sp"
            android:text=""/>

    <TextView
            android:id="@+id/productItemPricePerKg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_below="@+id/productItemDescription"
            android:textColor="@color/gray"
            android:textSize="16sp"
            android:text=""/>

    <TextView
        android:id="@+id/productItemAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_below="@+id/productItemPricePerKg"
        android:textColor="@color/gray"
        android:textSize="16sp"
        android:text=""/>

    <Button
        android:id="@+id/addBtn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:background="@drawable/custom_btn_add"
        android:backgroundTint="@color/gray" />

    <Button
        android:id="@+id/removeBtn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="60dp"
        android:layout_alignParentEnd="true"
        android:background="@drawable/custom_btn_remove"
        android:backgroundTint="@color/gray" />

</RelativeLayout>